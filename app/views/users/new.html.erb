<% provide(:title,"signup") %>
	<div class="field_container">
<%= form_for @user, url: users_path do |f| %>

		
		<%= f.label :name %>
		
		<%= f.text_field :name  %><br>
		
		<%= f.label :email %>
		
		<%= f.text_field :email %><br>
		
		<%= f.label :password %>
		
		<%= f.password_field :password  %><br>

		<%= f.label :confirm %>
		
		<%= f.password_field :confirm  %><br>
		

		<%= f.submit "Sing Up" %><br>
		
		

<% end %>	
</div>